<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE4D2">

    <TextView
        android:id="@+id/txtComidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/txtComidas"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPedidos"
        android:layout_width="137dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#6D4C41"
        android:text="@string/btnPedidos"
        app:layout_constraintBottom_toTopOf="@+id/txtComidas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.691" />

    <TextView
        android:id="@+id/txtMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/txtMenu"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="125dp"
        android:layout_height="118dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescripcionImg2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img1" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="125dp"
        android:layout_height="118dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDescripcionImg3"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/img3" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="120dp"
        android:layout_height="118dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtDescripcionImg3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img1" />

    <TextView
        android:id="@+id/txtDescripcionImg"
        android:layout_width="121dp"
        android:layout_height="39dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="64dp"
        android:text="@string/txtDescripcionImg"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <TextView
        android:id="@+id/txtDescripcionImg2"
        android:layout_width="137dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="88dp"
        android:text="@string/txtDescripcionImg"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtDescripcionImg3"
        android:layout_width="134dp"
        android:layout_height="47dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="104dp"
        android:text="@string/txtDescripcionImg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="405dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:background="#8C6844"
        android:text="UNICAFE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>