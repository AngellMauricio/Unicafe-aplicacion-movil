<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCAAA4">

    <TextView
        android:id="@+id/txtPedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/txtPedidos"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edtNombre"
        app:layout_constraintEnd_toEndOf="@+id/edtNombre"
        app:layout_constraintStart_toStartOf="@+id/edtNombre"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="274dp"
        android:layout_height="54dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="@string/edtNombre"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edtPrecio"
        app:layout_constraintEnd_toEndOf="@+id/edtPrecio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtPrecio" />

    <EditText
        android:id="@+id/edtPrecio"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:hint="@string/edtPrecio"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edtDescripcion"
        app:layout_constraintEnd_toEndOf="@+id/edtDescripcion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtDescripcion" />

    <EditText
        android:id="@+id/edtDescripcion"
        android:layout_width="272dp"
        android:layout_height="58dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="@string/edtDescripcion"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnAgregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#6D4C41"
        android:text="@string/btnAgregar"
        app:layout_constraintBottom_toTopOf="@+id/cdvMostrarPedidos"
        app:layout_constraintEnd_toStartOf="@+id/btnDestacar"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDestacar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#6D4C41"
        android:text="@string/btnDestacar"
        app:layout_constraintBottom_toTopOf="@+id/cdvMostrarPedidos"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cdvMostrarPedidos"
        android:layout_width="344dp"
        android:layout_height="229dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>