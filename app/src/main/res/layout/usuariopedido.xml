<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgUserIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAdminNombreUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nombre del Cliente"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#3E2723"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgUserIcon"
            app:layout_constraintTop_toTopOf="@+id/imgUserIcon" />

        <TextView
            android:id="@+id/tvAdminTelefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Tel: 555-1234"
            android:textSize="14sp"
            android:textColor="#5D4037"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgUserIcon"
            app:layout_constraintTop_toBottomOf="@+id/tvAdminNombreUser" />

        <TextView
            android:id="@+id/tvAdminTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Total Comprado: $0.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgUserIcon" />

        <Button
            android:id="@+id/btnAdminVerPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Pedidos"
            android:backgroundTint="#6D4C41"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/tvAdminTotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvAdminTotal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>